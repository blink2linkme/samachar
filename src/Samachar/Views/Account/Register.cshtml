@model Samachar.Domain.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="card">
    <form asp-controller="Account" asp-action="Register" asp-antiforgery="true" method="POST" class="form-horizontal">
        <div class="card-header">
            Account
        </div>
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label for="login__username" asp-for="Email" class="form-col-form-label">Username</label>
                <input id="login__username" type="text" asp-for="Email" class="form-control" placeholder="Username" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="login__password" class="form-col-form-label">Password</label>
                <input id="login__password" type="password" asp-for="Password" class="form-control" placeholder="Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="login__password" class="form-col-form-label">Confirm Password</label>
                <input id="login__password" type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign In">
            </div>
        </div>
    </form>
</div>