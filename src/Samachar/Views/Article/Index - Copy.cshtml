@section BreadCrum{
    <li class="breadcrumb-item active">Article</li>
}
@model ICollection<Samachar.Domain.Article>
@{ ViewBag.Title = "Article";
    int i = 0; }
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Article <a type="button" href="/Admin/Article/Add" class="btn btn-primary pull-right">Add Article</a></h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div id="pnlArticleList" class="panel panel-default">
            <div class="panel-heading">
                Article List
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="tblArticle">
                        <thead>
                            <tr>
                                <th>S.N.</th>
                                <th>Title</th>
                                <th>Short Description</th>
                                <th>Publish Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var article in Model)
                            {
                <tr class="gradeU">
                    <td>@(++i)</td>
                    <td>@*<img src="@article.BaseImagePath" class="img img-rounded" height="50" width="50" />*@<span class="">&nbsp;&nbsp;@article.Title</span></td>
                    @*<td>@article.ShortDescription</td>
                        <td>@article.PublishDate</td>*@
                    <td class="center">@(article.IsActive ? "Active" : "Inactive")</td>
                    <td class="center"><a href="/Admin/Article/Get/@article.Id" class="fGroup-edi" id="@article.Id">Edit</a> | <a href="javascript:void(0);" class="fGroup-del" id="@article.Id">Delete</a></td>
                </tr>
}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
