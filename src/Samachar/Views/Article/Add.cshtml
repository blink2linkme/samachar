                                @Html.TextBoxFor(m => m.PublishDate, new { @class = "form-control datepicker", placeholder = "Publish Date" })
                                @Html.ValidationMessageFor(m => m.PublishDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group modal-footer">
                            <button type="submit" id="btn-SaveArticle" class="btn btn-primary">Save</button>
                            <a href="/Admin/Article" id="btn-CancelArticle" class="btn btn-default">Cancel</a>
