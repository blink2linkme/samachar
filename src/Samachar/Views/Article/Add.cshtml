                                @Html.TextBoxFor(m => m.BaseImage, new { @class = "form-control", placeholder = "Base Image", @type = "file" })
                                @Html.ValidationMessageFor(m => m.BaseImage, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ArticleContents.ShortDescription, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextAreaFor(m => m.ShortDescription, new { @class = "form-control", placeholder = "Short Description" })
                                @Html.ValidationMessageFor(m => m.ArticleContents.ShortDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ArticleContents.Description, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextAreaFor(m => m.ArticleContents.Description, new { @class = "form-control", placeholder = "Description" })
                                @Html.ValidationMessageFor(m => m.ArticleContents.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.HiddenFor(m => m.ArticleId)
                            @Html.LabelFor(m => m.ArticleUrl, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.ArticleUrl, new { @class = "form-control", placeholder = "Article Url" })
                                @Html.ValidationMessageFor(m => m.ArticleUrl, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ReferenceUrl, new { @class = "control-label col-md-3" })
