@model Samachar.Domain.Article
@{
    ViewBag.Title = "Add Article";
}
<div class="row">
    <div class="col-lg-12">
        <div id="pnlArticleForm" class="panel panel-default">
            <div class="panel-heading">
                Article
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    @using (Html.BeginForm("Add", "Article", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl, id = "frmArticle", @class = "form-horizontal", @enctype = "multipart/form-data" }))
                    {
                        @Html.ValidationSummary()
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Title, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Title" })
                                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
