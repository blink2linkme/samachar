@model Samachar.Domain.Article
@{
    ViewBag.Title = "Add Article";
}
<div class="card">
    <div class="card-header">
        Article
    </div>
    <div class="card-body">
        <form class="form-horizontal" asp-action="Create" novalidate asp-antiforgery="true" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="form-col-form-label" asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label class="control-label" asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                        <option>Select</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label class="control-label" asp-for="ArticleTypes"></label>
                    <select asp-for="ArticleTypes" class="form-control" asp-items="ViewBag.ArticleTypes">
                        <option>Select</option>
                    </select>
                    <span asp-validation-for="ArticleTypes" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label class="form-col-form-label" asp-for="Slug"></label>
                    <input asp-for="Slug" class="form-control" />
                    <span asp-validation-for="Slug" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label class="form-col-form-label" asp-for="PublishOn"></label>
                    <input asp-for="PublishOn" class="form-control" placeholder="Publish On" />
                    <span asp-validation-for="PublishOn" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="form-col-form-label" asp-for="ArticleContent.ShortDescription"></label>
                <textarea asp-for="ArticleContent.ShortDescription" class="form-control" placeholder="Short Description"></textarea>
                <span asp-validation-for="ArticleContent.ShortDescription" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                @Html.LabelFor(m => m.BaseImage, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.BaseImage, new { @class = "form-control", placeholder = "Base Image", @type = "file" })
                    @Html.ValidationMessageFor(m => m.BaseImage, "", new { @class = "text-danger" })
                </div>
            </div>*@
            <div class="form-group">
                <label class="form-col-form-label" asp-for="ArticleContent.Content"></label>
                <textarea asp-for="ArticleContent.Content" class="form-control" placeholder="Content"></textarea>
                <span asp-validation-for="ArticleContent.Content" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
@section Stylesheets{
    <link rel="stylesheet" src="/lib/jqueryui/jquery-ui.css" />
}
@section Scripts{
    <script type="text/javascript" src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            tinymce.init({
                selector: '#ArticleContent_Content',
                height: 500,
                menubar: false,
                plugins: [
                    'advlist autolink lists link image charmap print preview anchor',
                    'searchreplace visualblocks code fullscreen',
                    'insertdatetime media table contextmenu paste code'
                ],
                toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
                content_css: '//www.tinymce.com/css/codepen.min.css'
            });
            $(document).off("change", "#Title");
            $(document).on("change", "#Title", function (e) {
                var articleUrl = ($(this).val()).split(' ').join('-');
                $("#Slug").val(articleUrl.toLowerCase());
            });
            //$('.datepicker').datepicker();
        });
    </script>
}
