@section BreadCrum{
    <li class="breadcrumb-item active">Article</li>
}
@model ICollection<Samachar.Domain.Category>
@{ ViewBag.Title = "Category";
    int i = 0; }
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Article <a type="button" href="/Admin/Article/Add" class="btn btn-primary pull-right">Add Category</a></h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div id="pnlArticleList" class="panel panel-default">
            <div class="panel-heading">
                Category List
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="tblCategory">
                        <thead>
                            <tr>
                                <th>S.N.</th>
                                <th>Name</th>
                                <th>Sequence</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                <tr class="gradeU">
                    <td>@(++i)</td>
                    <td><img src="@category.Image.Url" alt="@category.Name" class="img img-rounded" height="50" width="50" /><span class="">&nbsp;&nbsp;@category.Name</span></td>
                    <td>@category.Sequence</td>
                    <td class="center">@(category.IsActive ? "Active" : "Inactive")</td>
                    <td class="center"><a href="/Admin/Article/Get/@category.Id" class="fGroup-edi" id="@category.Id">Edit</a> | <a href="javascript:void(0);" class="fGroup-del" id="@category.Id">Delete</a></td>
                </tr>
}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
